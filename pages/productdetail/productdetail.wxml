<view class='detail'>
  <!-- 图片轮播 -->
  <view class='mod_slider'>
    <swiper indicator-dots="true" indicator-color="rgba(255, 255, 255, .6)" indicator-active-color="#e93b3d" style='width:100%; height: 820rpx;'>
      <block wx:for="{{partData.loopImgUrl}}" wx:key="index">
        <swiper-item>
          <image class="swiper-item" src="{{item}}"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 商品信息 -->
  <view class='buy_area'>
    <view class='textWrap'>
      <text>{{partData.title}}</text>
    </view>
    <view class='priceWrap'>
      <text>¥{{partData.price}}</text>
    </view>
    <!-- 支付 -->
    <detailsCom bind:showLayer="popupLayer" name="{{componentDatas.btName}}" desc="{{componentDatas.btDesc}}"></detailsCom>
    <!-- 已选 -->
    <detailsCom bind:showLayer="showSelected" name="{{componentDatas2.selectedName}}" desc="{{componentDatas2.selectedNums}}件"></detailsCom>
  </view>
  <!-- 购物车 -->
  <view class='btn_bar'>
    <view class='icon_cart' bindtap='gotoCart'>
      <text class='badge' wx:if='{{badgeCount > 0}}'>{{badgeCount}}</text>
      <image src='/image/cart.png'></image>
      <text>购物车</text>
    </view>
    <view class='cart_btn'>
      <button bindtap='addCarts'>加入购物车</button>
    </view>
  </view>
  <!-- 支付弹框 -->
  <iouCom bind:selectedBT="selectChangeFlag" isShowPopup="{{isShowPopup}}" IOUList="{{baitiao}}"></iouCom>
  <!-- 多选弹窗 -->
  <selectedNum bind:getCartNum="getCartNums" isShowSelected="{{isShowSelected}}" partData="{{partData}}"></selectedNum>
</view>