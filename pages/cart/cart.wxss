/* pages/cart/index.wxss */
.cart{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.empty_wrap{
  width: 100%;
  padding: 60rpx 0 30rpx;
  text-align: center;
}
.empyt_icon{
  width: 180rpx;
  height: 180rpx;
}
.empyt_txt{
  display: block;
  font-size: 32rpx;
  color: rgba(51,51,51,.66);
  line-height: 48rpx;
  margin: 22rpx 0;
}
.section{
  width: 100%;
  height: 100%;
  background: #fff;
}
.good_list{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.content{
  box-sizing: border-box;
  padding: 10rpx;
  display: flex;
  flex-direction: row;
  margin-right:0;
  transition: all 0.4s;
  transform: translateX(90px);
  margin-left: -90px;
  padding-right: 0;
}
.select_icon{
  width: 8%;
  position: relative;
}
.select_icon image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 50%;
  margin-top: -20rpx;
}
.goods{
 box-sizing: border-box;
 width: 100%;
 padding: 20rpx 10rpx;
 border-radius: 8rpx;
 box-shadow: 0 1rpx 4rpx rgba(150,150,150,0.3);
 display: flex;
 flex-direction: row;
}
.goods .good_img{
  width: 30%;
  height: 200rpx;
}
.good_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good_title{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 0;
  font-size: 28rpx;
}
.good_price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.good_price .price{
  line-height: 40rpx;
  color: #e4393c;
  font-size: 30rpx;
}
.fixBar{
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  border-top: 2rpx solid #e8e8ed;
  color: #333;
  font-size: 28rpx;
  z-index: 99;
  display: flex;
  flex-direction: row;
  height: 100rpx;
}
.select_all{
  width: 20%;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #999;
  box-sizing: border-box;
  padding-left: 20rpx;
}
.select_all text {
  vertical-align: middle;
}
.select_all .icon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}
.total{
  width: 40%;
  box-sizing: border-box;
  line-height: 100rpx;
  font-size: 32rpx;
}
.total .money{
  color: #e4393c;
  font-weight: 700;
}
.btn_amount{
  width: 40%
}
.btn_amount button{
  background: #e4393c;
  color: #fff;
  height: 100rpx;
  border: none;
  border-radius: 0;
  line-height: 100rpx;
}

.del{
  background-color: #e4393c;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: translateX(90px);
  transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}